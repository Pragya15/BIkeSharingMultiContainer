@model BikeSharing.Private.Web.Site.Models.IssueViewModels.IndexViewModel

@{
    ViewData["Title"] = "View";
}

<div class="container page-container bsh-stations">
    <div class="row flex-items-xs-bottom">
        <div class="col-md-3 col-sm-12">
            <h1>Issues</h1>
        </div>
        <div class="col-md-9 col-sm-12 u-bottom u-align-right">
            @*<span>Showing @Html.DisplayFor(modelItem => modelItem.PaginationInfo.ItemsPerPage) of @Html.DisplayFor(modelItem => modelItem.PaginationInfo.TotalItems) stations - Page @(Model.PaginationInfo.ActualPage + 1) of @Html.DisplayFor(x => x.PaginationInfo.TotalPages)</span>*@
        </div>
    </div>

    <div class="margin-middle-top">
        <table class="table">
            <thead class="thead-default">
                <tr>
                    <th>
                        Type
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Solved
                    </th>
                    <th>
                        Bike serial
                    </th>
                    <th>
                        Ride
                    </th>
                    <th>
                        Start
                    </th>
                    <th>
                        Stop
                    </th>
                    <th>
                        From
                    </th>
                    <th>
                        To
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Issues)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueSolved)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BikeSerialNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RideType)
                        </td>
                        <td>
                            <span>@item.RideStart.ToString("MM/dd HH:mm")</span>
                        </td>
                        <td>
                            <span>@item.RideStop.ToString("MM/dd HH:mm")</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RideFrom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RideTo)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @*<div class="container">
            <div class="row">
                <div class="col-xs-4">
                    <nav>
                        <ul class="pagination pagination-sm u-float-left">
                            <li class="page-item">
                                <a class="page-link prev @Model.PaginationInfo.Previous" id="Previous"
                                   href="@Url.Action("Index","Issue", new { page = Model.PaginationInfo.ActualPage + -1 })
                                   aria-label="Previous">
                                    <span class="icon-ico-arrowcopy"></span>
                                    <span>Previous</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-xs-4 u-align-center">Page @(Model.PaginationInfo.ActualPage + 1) of @Html.DisplayFor(x => x.PaginationInfo.TotalPages)</div>
                <div class="col-xs-4">
                    <nav>
                        <ul class="pagination pagination-sm u-float-right">
                            <li class="page-item">
                                <a class="page-link next @Model.PaginationInfo.Next" id="Next"
                                   href="@Url.Action("Index","Issue", new { page = Model.PaginationInfo.ActualPage + 1 })"
                                   aria-label="Next">
                                    <span>Next</span>
                                    <span class="icon-ico-arrow-blue"></span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>*@
    </div>
</div>
